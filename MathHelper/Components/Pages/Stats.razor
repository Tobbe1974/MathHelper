@page "/stats"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using MathHelper.Models
@using MathHelper.Services
@inject ProgressService ProgressService
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Statistics - MathHelper</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Your Statistics</h1>
        <a href="/dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>

    @if (_loading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header">
                        <h4 class="mb-0">Overall Progress</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                        <th>Level</th>
                                        <th>Correct</th>
                                        <th>Attempts</th>
                                        <th>Accuracy</th>
                                        <th>Current Streak</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (_progress != null)
                                    {
                                        @foreach (var category in Enum.GetValues<MathCategory>())
                                        {
                                            var p = _progress.GetValueOrDefault(category);
                                            <tr>
                                                <td><strong>@category</strong></td>
                                                <td><span class="badge bg-secondary">@(p?.CurrentLevel ?? 1)</span></td>
                                                <td>@(p?.TotalCorrect ?? 0)</td>
                                                <td>@(p?.TotalAttempts ?? 0)</td>
                                                <td>
                                                    @if (p != null && p.TotalAttempts > 0)
                                                    {
                                                        @(((double)p.TotalCorrect / p.TotalAttempts * 100).ToString("F1"))@("%")
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>@(p?.CorrectStreak ?? 0)</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Trial History</h4>
                        <div>
                            <select class="form-select form-select-sm" style="width: auto; display: inline-block;" @bind="_selectedCategory">
                                <option value="">All Categories</option>
                                @foreach (var cat in Enum.GetValues<MathCategory>())
                                {
                                    <option value="@cat">@cat</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (_trials != null && _trials.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Category</th>
                                            <th>Questions</th>
                                            <th>Correct</th>
                                            <th>Accuracy</th>
                                            <th>Time</th>
                                            <th>Level</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var trial in FilteredTrials)
                                        {
                                            <tr>
                                                <td>@trial.CompletedAt.ToLocalTime().ToString("MMM d, yyyy HH:mm")</td>
                                                <td>@trial.Category</td>
                                                <td>@trial.QuestionCount</td>
                                                <td>@trial.CorrectAnswers</td>
                                                <td>@trial.Accuracy.ToString("F0")%</td>
                                                <td>@FormatTime(trial.TimeSeconds)</td>
                                                <td><span class="badge bg-secondary">@trial.DifficultyLevel</span></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center">No trials completed yet. Start a trial from the dashboard!</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private Dictionary<MathCategory, UserProgress>? _progress;
    private List<TrialResult>? _trials;
    private bool _loading = true;
    private string _selectedCategory = string.Empty;

    private IEnumerable<TrialResult> FilteredTrials => string.IsNullOrEmpty(_selectedCategory)
        ? _trials ?? Enumerable.Empty<TrialResult>()
        : _trials?.Where(t => t.Category.ToString() == _selectedCategory) ?? Enumerable.Empty<TrialResult>();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (!string.IsNullOrEmpty(userId))
        {
            _progress = await ProgressService.GetAllProgressAsync(userId);
            _trials = await ProgressService.GetTrialResultsAsync(userId);
        }
        _loading = false;
    }

    private string FormatTime(double seconds)
    {
        var ts = TimeSpan.FromSeconds((double)seconds);
        return ts.Minutes > 0
            ? $"{ts.Minutes}:{ts.Seconds:D2}.{ts.Milliseconds / 100}"
            : $"{ts.Seconds}.{ts.Milliseconds / 100}s";
    }
}
